<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <div class="form-group">
    <input placeholder="Search" class="form-control search">
  </div>
  <button type="button" class="btn btn-default sort">ASC</button>
  <thead>
    <tr>
      <th>Genre</th>
      <th>Name</th>
      <th>Author</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="list-group users">
    <% current_user.created_books.each do |book| %>
      <tr class="list-group-item" data-searchstring="<%= book.name %> <%= book.genres.name %> <%= book.author %> <%= book.creator.username %>">
        <td><%= book.genres.name %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.creator.username %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
