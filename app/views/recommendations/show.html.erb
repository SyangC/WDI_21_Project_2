<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recommendation.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recommendation.description %>
</p>

<% if current_user.id == @recommendation.user_id %>
  <%= link_to 'Edit', edit_recommendation_path(@recommendation) %> |
<% end %>
<%= link_to 'Back', book_path(@current_book) %>

<div class="comment_list">
  <% @comments.each do |comment| %>
    <%= comment.comment %> <br>
      <%= link_to comment.user.username, user_path(comment.user_id) %> <br>
        <br>
    <% end %>
</div>

<div class="comment-section">
  <%= form_tag create_comment_path, method: "post" do %>
    <%= hidden_field_tag "id", @recommendation.id %>
      <%= text_area_tag :comment %>
      <%= submit_tag "Submit" %>
    <% end %>
</div>
