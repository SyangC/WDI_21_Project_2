<div class="col-md-10 col-md-offset-1 books">

  <h1>Browse all books</h1>

  <div>
    <input placeholder="Search for book title, author, genre or uploader" class="search form-control">
  </div>

  <table class="sortable table table-hover table-responsive">
    <thead>
      <tr>
        <th class="no-sort col-md-2">Genre</th>
        <th class="no-sort col-md-4">Name</th>
        <th class="no-sort col-md-2">Author</th>
        <th class="no-sort col-md-1">Cover</th>
        <th class="no-sort col-md-2">Uploader</th>
        <th class="no-sort col-md-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr data-searchstring="
          <%= book.name %>
          <%= book.author %>
          <%= book.creator.username %>
          <%= book.genre.name %>
        ">
          <td class="cl-effect-14"><%= book.genre.name %></td>
          <td class="cl-effect-14"><%= link_to book.name, book_path(book) %></td>
          <td class="cl-effect-14"><%= link_to book.author, "https://www.google.co.uk/#q="+book.author+" author" %></td>
          <td class="cl-effect-14"><%= image_tag book.book_image.thumb.url %></td>
          <td class="cl-effect-14"><%= link_to book.creator.username, user_path(book.creator) %></td>
          <td class="cl-effect-14"><%= link_to "Buy now", "https://www.amazon.co.uk/s/ref=nb_sb_noss_1?url=search-alias%3Daps&field-keywords="+book.name+" "+book.author+" book&tbm=shop" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>