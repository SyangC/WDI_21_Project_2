<h1>Browse</h1>

<div class="gallery">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Cover</th>
        <th>Uploaded by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.name, book_path(book) %></td>
          <td><%= book.author %></td>
          <td><%= image_tag book.book_image.thumb.url %></td>
          <td><%= book.creator.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


