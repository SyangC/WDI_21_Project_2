<h1>Browse</h1>

<div class="gallery">
  <div class="form-group">
    <input placeholder="Search" class="form-control search">
  </div>
  <button type="button" class="btn btn-default sort">ASC</button>
  <table>
    <thead>
      <tr>
        <th>Genre</th>
        <th>Name</th>
        <th>Author</th>
        <th>Cover</th>
        <th>Uploaded by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="list-group users">
      <% @books.each do |book| %>
        <tr class="list-group-item" data-searchstring="<%= book.name %> <%= book.genres.name %> <%= book.author %> <%= book.creator.username %>">
          <td><%= book.genres.name %></td>
          <td><%= link_to book.name, book_path(book) %></td>
          <td><%= book.author %></td>
          <td><%= image_tag book.book_image.thumb.url %></td>
          <td><%= book.creator.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


